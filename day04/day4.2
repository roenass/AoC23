require 'set'

def cardmatches(value)
    wins = []
    winning, numbers = value.split(" | ")
    winners = Set.new(winning.split);

    numbers.split.each do |n|
        wins.push(n) if winners === n
    end
    return wins
end

def numcardmatches(value)
    return cardmatches(value).length
end

