END {
    rank=0; sum=0
    hand.sort.each { |deal, v|
        (bet, category) = v.split(":")
        rank += 1
        sum += rank * bet.to_i
        orgdeal = deal.to_s(16).tr('edc1a', 'AKQJT')[1..-1]
#        puts "#{rank} #{orgdeal} #{bet} #{category}"
#        puts "#{rank} #{orgdeal} #{bet}"
